@model IEnumerable<Meal>
@foreach (var o in Model)
{
    <tr id='o@(o.Id)'>
        <td>
        <img  src='@Url.Content("~/pictures/Meals/" + (o.HasPic ? o.Id : 0) + ".jpg")' class="thumb"  alt='picture' />        
        </td>
        <td>
            @o.Name
        </td>
        <td>
            @o.Comments
        </td>
        <td>
        @Html.ActionLink("Picture", "Picture", new { o.Id }, new { @class="abtn"})
        </td>
        <td>
            
            @Html.PopupFormActionLink("Edit", parameters: new object[] { o.Id }, htmlAttributes: new { @class = "abtn" })
        </td>
        <td>
            <form class="fconfirm" method="post" action="@Url.Action("Delete", new { o.Id })">
            <input type="submit" value="Delete" class="confirm" />
            </form>
        </td>
    </tr>
}
